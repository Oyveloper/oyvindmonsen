import React from 'react';
import $ from 'jquery';

function parrallaxHover(e) {
    var tile = e.target;


    if (tile.className == "project-tile" || true) {
	var halfWidth = (tile.clientWidth / 2);
	var halfHeight = (tile.clientHeight / 2);

	var coorX = (halfWidth - (e.pageX - tile.offsetLeft));
	var coorY = (halfHeight - (e.pageY - tile.offsetTop));

	var degX = ((coorY / halfHeight) * 10) + 'deg';
	var degY = ((coorX / halfWidth) * -10) + 'deg';

	

	$(tile).css('transform', function() {
	    return 'rotate(' + degX + ') rotateY(' + degY + ')';
	});

    }

   
}

function removeParrallax(e) {
    var tile = e.target;

    tile.style.transform = ""; 
}



function ProjectTile(props) {
    return (
	<div className="project-tile" onMouseMove={parrallaxHover} onMouseOut={removeParrallax}>
	    <h1 className="project-title">{props.title}</h1>
		<p className="project-description">{props.description}</p>
	</div>
    );
}

export default ProjectTile; 
